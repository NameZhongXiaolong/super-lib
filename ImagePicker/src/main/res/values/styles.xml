<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ImagePicker_AppTheme_Light" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/ip_white</item>
        <item name="colorPrimaryDark">@color/ip_color_grey</item>
        <item name="colorAccent">@color/ip_color_333333</item>
        <item name="android:windowBackground">@color/ip_white</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
<!--        <item name="galleryColorAccentTranslucent">@color/ImagePicker_colorAccentTranslucent</item>-->
    </style>

    <style name="ImagePicker_AppTheme_Light_StatusBar" parent="ImagePicker_AppTheme_Light">
        <item name="colorPrimaryDark">@color/ip_white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <!--测试App 通用主题-->
    <style name="ImagePicker_AppTheme_MeStore_Normal" parent="ImagePicker_AppTheme_Light_StatusBar">
        <item name="colorAccent">@color/ip_color_333333</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <!--测试App 6.0以下版本主题-->
    <style name="ImagePicker_AppTheme_MeStore_M" parent="ImagePicker_AppTheme_Light">
        <item name="colorAccent">@color/ip_color_333333</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!--MilaChat App通用主题-->
    <style name="ImagePicker_AppTheme_MilaChat_Normal" parent="ImagePicker_AppTheme_Light">
        <item name="colorAccent">@color/ip_milachat_colorAccent</item>
        <item name="colorPrimaryDark">@color/ip_white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <!--MilaChat App6.0以下版本主题-->
    <style name="ImagePicker_AppTheme_MilaChat_M" parent="ImagePicker_AppTheme_Light">
        <item name="colorAccent">@color/ip_milachat_colorAccent</item>
    </style>

    <!--dialog主题-->
    <style name="ImagePicker_AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">300dp</item>
        <item name="android:windowBackground">@color/ip_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#333333</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
</resources>
